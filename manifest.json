{
    "manifest_version": 3,
    "name": "The Word Hub",
    "version": "1.0.0",
    "content_scripts":[ 
        {
            "matches": ["<all_urls>"],
            "css":["popup.css"],
            "js":["popup.js"]
        }

 
    ],
    "description": "The Dictionary Extension",
    "icons":{"128": "book-img.png"},
    "action":{
        "default_icon": "book-img.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"]
}